    <script>
         let selectedPaymentMethod = null; // Zmienna deklarowana tylko raz

        // Funkcja wyboru metody płatności
        function selectPaymentMethod(method) {
            selectedPaymentMethod = method;
            console.log("Wybrana metoda płatności:", method);
            // Przełącz formularz PayPal w zależności od wyboru
            if (method === 'paypal') {
                document.getElementById('paypal-form').style.display = 'block';
            } else {
                document.getElementById('paypal-form').style.display = 'none';
            }
        }

        // Przetwarzanie płatności
        document.getElementById('payment-button').addEventListener('click', function () {
            if (!selectedPaymentMethod) {
                alert("Proszę wybrać metodę płatności.");
                return;
            }

            if (selectedPaymentMethod === 'paypal') {
                const name = document.getElementById("input-name").value;
                const message = document.getElementById("input-message").value;
                const amount = document.getElementById("payment-input-value").value;

                if (name && amount > 0) {
                    document.getElementById('paypal-item-name').value = `${name}: ${message}`;
                    document.getElementById('paypal-amount').value = amount;
                    document.getElementById('paypal-form').submit();
                } else {
                    alert("Proszę wprowadzić nazwę i kwotę powyżej 0.");
                }
            } else {
                alert("Wybrano metodę: " + selectedPaymentMethod);
                // Dodaj logikę dla innych metod płatności, np. PaySafeCard
            }
        });
    </script>

